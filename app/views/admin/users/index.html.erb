<h1>Users</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Name</th>
      <th>Tier</th>
      <th>Registered At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= [user.first_name, user.last_name].compact.join(' ') %></td>
        <td><%= user.current_tier_name %></td>
        <td><%= user.created_at.strftime('%Y-%m-%d') %></td>
        <td><%= link_to admin_user_path(user), class: 'btn btn-sm btn-outline-primary', title: 'View' do %><i class="bi bi-eye"></i><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users, theme: 'bootstrap-5', pagination_class: "pagination-sm flex-wrap justify-content-center", nav_class: "d-inline-block" %>
